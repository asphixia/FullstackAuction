{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2018"],
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}